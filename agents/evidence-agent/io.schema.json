{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://juridico-cli.local/schemas/evidence-agent/io.schema.json",
  "title": "Evidence-Agent Output Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": ["outputs"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": true
    },
    "outputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["result"],
      "properties": {
        "result": { "$ref": "#/$defs/result" }
      }
    }
  },
  "$defs": {
    "result": {
      "type": "object",
      "additionalProperties": false,
      "required": ["resumo_executivo", "findings", "inventario_documental"],
      "properties": {
        "resumo_executivo": { "type": "string", "minLength": 1 },
        "findings": {
          "type": "array",
          "items": { "$ref": "#/$defs/finding" }
        },
        "inventario_documental": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "documentos_apresentados",
            "documentos_faltantes",
            "documentos_recomendados_para_colheita"
          ],
          "properties": {
            "documentos_apresentados": {
              "type": "object",
              "additionalProperties": false,
              "required": ["total_documentos", "por_tipo", "lista"],
              "properties": {
                "total_documentos": { "type": "integer", "minimum": 0 },
                "por_tipo": {
                  "type": "object",
                  "additionalProperties": { "type": "integer", "minimum": 0 }
                },
                "lista": {
                  "type": "array",
                  "items": { "$ref": "#/$defs/doc_item" }
                }
              }
            },
            "documentos_faltantes": {
              "type": "array",
              "items": { "type": "string" }
            },
            "documentos_recomendados_para_colheita": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "finding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "titulo", "descricao", "severidade", "evidencias", "recomendacoes"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "titulo": { "type": "string", "minLength": 1 },
        "descricao": { "type": "string", "minLength": 1 },
        "severidade": { "type": "string", "minLength": 1 },
        "evidencias": {
          "type": "array",
          "items": { "$ref": "#/$defs/evidence" }
        },
        "recomendacoes": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "evidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["fonte", "trecho", "observacao"],
      "properties": {
        "fonte": { "type": "string", "minLength": 1 },
        "trecho": { "type": "string" },
        "observacao": { "type": "string" }
      }
    },
    "doc_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id_doc", "tipo", "descricao", "referencia"],
      "properties": {
        "id_doc": { "type": "string" },
        "tipo": { "type": "string" },
        "descricao": { "type": "string" },
        "referencia": { "type": "string" },
        "observacao": { "type": ["string", "null"] }
      }
    }
  }
}
